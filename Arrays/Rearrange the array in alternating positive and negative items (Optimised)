public class xxr{
public static void main(String[] args){
int arr[]={3,1,-2,-5,2,-4};
int result[]= reArrange(arr);
for(int i: result){
System.out.print(i+" ");
}
}
public static int[] reArrange(int arr[]){
int temp[]= new int[arr.length];
int pos=0;
int neg=1;
for(int i:arr){
if(i>0){
temp[pos]=i;
pos+=2;
}else{
temp[neg]=i;
neg+=2;
}
}
return temp;
}
}
